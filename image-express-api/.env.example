# Domain and SSL
DOMAIN=domain.example.com
SSL_EMAIL=email@example.com

# Database passwords
MONGO_PASSWORD=$(openssl rand -base64 32)
REDIS_PASSWORD=$(openssl rand -base64 32)
GRAFANA_PASSWORD=$(openssl rand -base64 32)

# Authentication
TRAEFIK_AUTH=$(htpasswd -nB admin)

# Application
NODE_ENV=development
SERVER_PORT=3000
SERVER_API_VERSION=v1
APP_VERSION=$(git describe --tags)

# MongoDB
MONGODB_URI=mongodb://user.example:password.example@localhost:27017/imagedb?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=0

# Queue
QUEUE_NAME=image-processing
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Storage
STORAGE_INPUT_PATH=/app/uploads
STORAGE_OUTPUT_PATH=/app/output

# API
API_KEY=development-key
ENABLE_SWAGGER=true

# Logging
LOG_LEVEL=info
LOKI_URL=
LOKI_BATCH_SIZE=100
LOKI_BATCH_INTERVAL=5000

# Workers
WORKER_REPLICAS=3